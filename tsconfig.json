{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["./types"],
    "outDir": "dist",
    "strictNullChecks": true
  },
  "lib": [
    "es2019"
  ],
  "include": [
    "src/**/*"
  ]
}
